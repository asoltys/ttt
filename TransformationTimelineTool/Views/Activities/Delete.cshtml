@model TransformationTimelineTool.Models.Event
@using TransformationTimelineTool.Helpers
@{
    ViewBag.Title = Resources.Delete;
}

@if(Culture == "fr")
{
    ViewBag.lang = "fra";
}
else
{
    ViewBag.lang = "eng";
}


<h2>@Resources.Delete</h2>

<h3>@(Resources.DeleteConfirm + " " + Resources.Activity.ToLower() + '?')</h3>
<div>
    <h4>@Resources.Activity</h4>
    <dl class="dl-horizontal">
        <dt>
            @Resources.Initiative
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Initiative.Name)
        </dd>

        <dt>
            @Resources.Type
        </dt>

        <dd>
            @Utils.GetTranslation(Html.DisplayFor(model => model.LatestEdit.Type).ToString())
        </dd>

        <dt>
            @Resources.Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LatestEdit.DisplayDate)
        </dd>

        <dt>
            @Resources.Branches
        </dt>

        <dd>
            @Html.Raw(Model.BranchesList)
        </dd>

        <dt>
            @Resources.Regions
        </dt>

        <dd>
            @Html.Raw(Model.RegionsList)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="@Resources.Submit" class="btn btn-default" /> |
            @Html.ActionLink(Resources.BackToList + " " + Resources.OfActivities, "Index", new {  lang =  ViewBag.lang}, null)
        </div>
    }
</div>
