@{
    if(Culture == "fr")
    {
        Layout = "~/Views/Shared/_IntraLayoutFra.cshtml";
        ViewBag.Title = "Calendrier national des transformations";
        ViewBag.lang = "fra";
    }
    else
    {
        Layout = "~/Views/Shared/_IntraLayout.cshtml";
        ViewBag.Title = "National Transformation Timeline Tool";
        ViewBag.lang = "eng";
    }
}

<div id="timeline-tool">
    <div id="timeline-tool-intro">
<h1 id="wb-cont">@ViewBag.Title</h1>
<ul class="menu-horizontal align-center dotted-bottom">
    @Html.ActionLink(Resources.Accessibility, "Accessibility", new { lang=ViewBag.lang }, new { @class="button" })
    @Html.ActionLink(Resources.Report, "Report", new { lang=ViewBag.lang }, new { @class="button" })
    @Html.ActionLink(Resources.Subscribe, "Subscribe", new { lang=ViewBag.lang }, new { @class="button" })
    @Html.ActionLink(Resources.Feedback, "Index", "Home", protocol: null, hostName: null, fragment: "feedback", routeValues: new { lang=ViewBag.lang }, htmlAttributes: new { @class="button" })
    @if (HttpContext.Current.User.IsInRole("Admin") ||
    HttpContext.Current.User.IsInRole("Approver") ||
    HttpContext.Current.User.IsInRole("Editor") )
    {
        @Html.ActionLink(Resources.Administration, "Index", "Initiatives", new { lang = "eng" }, new { @class = "button" })
    }
</ul>
<div id="about" class="span-7"></div>
<div id="legend" class="span-1"></div>

<div class="clear"></div>
    </div>

    <div id="navHeaderContainer" class="grid-12">
    <div id="navHeader" class="span-12">
        <div id="leftNav" class="span-1" style="margin: 0px;"></div>
        <div id="viewNav" class="span-3" style="margin: 0px;"></div>
        <div id="areaNav" class="span-2" style="margin: 0px;"></div>
        <div id="branchNav" class="span-5" style="margin: 0px;"></div>
        <div id="rightNav" class="span-1" style="margin: 0px;"></div>
        <div id="dateNav" class="span-12" style="margin: 0px; overflow: hidden;"></div>
    </div>
</div>
<div class="clear"></div>
    <div id="navHeaderSpace"></div>

    <div id="render" class="span-8" style=""></div>
<div id="dialog" title="dialog"></div>
</div>

