@model TransformationTimelineTool.Models.Region

@if(Culture == "fr")
{
    ViewBag.lang = "fra";
}
else
{
    ViewBag.lang = "eng";
}


@{
    ViewBag.Title = Resources.Details;
}

<h2>@Resources.Details</h2>

<div>
    <h4>@Resources.Region</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Resources.EnglishName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameE)
        </dd>

        <dt>
            @Resources.FrenchName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameF)
        </dd>

    </dl>
</div>
<p>
    @if (HttpContext.Current.User.IsInRole("Admin"))
    {
        @Html.ActionLink(Resources.Edit, "Edit", new { id = Model.ID, lang = ViewBag.lang }) @:|
    }
    @Html.ActionLink(Resources.BackToList, "Index", new {  lang =  ViewBag.lang})
</p>
